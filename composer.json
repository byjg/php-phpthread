{
  "name": "byjg/phpthread",
  "description": "ByJG PHPThread simplifies working with threads and non-blocking code in PHP, bridging the gap for a language that was not inherently designed for threading.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "byjg/cache-engine": "^6.0",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "php": ">=8.3 <8.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5|^11.5",
    "vimeo/psalm": "^5.9|^6.13",
    "react/promise": "^3.2",
    "react/event-loop": "^1.5",
    "byjg/restserver": "^6.0"
  },
  "suggest": {
    "ext-pthreads": "*"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ByJG\\PHPThread\\": "src/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --threads=1"
  }
}
